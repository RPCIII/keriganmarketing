<?xml version="1.0"?>
<skin version="1.0" name="Nacht" author="LongTail Video">

	<settings>
		<setting name="backcolor" value="0xCCCCCC" />
		<setting name="frontcolor" value="0x555555" />
		<setting name="lightcolor" value="0x000000" />
		<setting name="screencolor" value="0xFFFFFF" />
		<setting name="fontsize" value="10" />
	</settings>

	<components>
		<component name="controlbar">
			<settings>
				<setting name="margin" value="0" />
				<setting name="fontsize" value="14" />
			</settings>

			<elements>
				<element name="background" src="background.png" />
				<element name="capLeft" src="capLeft.png" />
				<element name="capRight" src="capRight.png" />
				<element name="divider" src="divider.png" />
								
				<element name="blankButton" src="blankButton.png" />
				<element name="blankButtonOver" src="blankButton.png" />
				
				<element name="playButton" src="play.png" />
				<element name="playButtonOver" src="play-hov.png" />
				
				<element name="pauseButton" src="pause.png" />
				<element name="pauseButtonOver" src="pause-hov.png" />
				
			
				<element name="stopButton" src="stop.png" />
				<element name="stopButtonOver" src="stop-hov.png" />
				
				<element name="timeSliderRail" src="pbar-buffered.png" />      							
				<element name="timeSliderBuffer" src="pbar-unplayed.png" />
				<element name="timeSliderProgress" src="pbar-played.png" />
				<element name="timeSliderThumb" src="pbar-thumb.png" />
				
				<element name="fullscreenButton" src="full.png" />
				<element name="fullscreenButtonOver" src="full-hov.png" />
				
				<element name="normalscreenButton" src="full.png" />
				<element name="normalscreenButtonOver" src="full-hov.png" />
				
				<element name="muteButton" src="mute.png" />
				<element name="muteButtonOver" src="mute-hov.png" />
				
				<element name="unmuteButton" src="unmute.png" />
				<element name="unmuteButtonOver" src="unmute.png" />
				
				<element name="volumeSliderRail" src="vol-buffered.png" />
				<element name="volumeSliderBuffer" src="vol-buffered.png" />
				<element name="volumeSliderProgress" src="vol-level.png" />
			</elements>
		</component>

	</components>

</skin>